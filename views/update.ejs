<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
</head>

<body>
    <h1>Questionaire!</h1>

    <form action="/bookings/update/<%= booking._id %>" method="POST">
        <div class="row mb-3">
            <label for="inputEmail3" class="col-sm-2 col-form-label">Email</label>
            <div class="col-sm-10">
                <input type="email" class="form-control" id="inputEmail3" required name="email">
            </div>
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">Student</label>
                <select name="Student" class="form-select" aria-label="Default select example"
                    onchange="teamSelected(this.value)">
                    <option selected>Open this select menu</option>
                    <option value="Department">Department</option>
                    <option value="Locations">Location</option>
                    <option value="Major">Major</option>
                </select>
            </div>
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">data</label>
                <select name="data" class="form-select" aria-label="Default select example" id="data" disabled>
                </select>

                <button type="submit" class="btn btn-primary">Submit</button>
    </form>


    <button type="submit" class="btn btn-primary">Submit</button>
    </form>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-u1OknCvxWvY5kfmNBILK2hRnQC3Pr17a+RTT6rIHI7NnikvbZlHgTPOOmMi466C8"
        crossorigin="anonymous"></script>

        <script>
            var department = ["Computer Science", "Engineering"];
            var locations = ["Hongkong island", "Kowloon", "New Territories"];
            var major = ["DAAI", "ITM", "Mechanical Engineering"];
    
            function StudentSelected(Student) {
                //alert(Student);
                var dataElem = document.getElementById("data");
                dataElem.options.length = 0;
                if (Student == "department") {
    
                    for (var hero of department) {
                        var option = document.createElement("option");
                        option.text = hero;
                        option.value = hero;
                        dataElem.add(option);
                    }
    
                    dataElem.disabled = false;
    
                } else if (Student == "locations") {
    
                    for (var hero of locations) {
                        var option = document.createElement("option");
                        option.text = hero;
                        option.value = hero;
                        dataElem.add(option);
                    }
    
                    dataElem.disabled = false;
                } else if (Student == "major") {
    
                    for (var hero of major) {
                        var option = document.createElement("option");
                        option.text = hero;
                        option.value = hero;
                        dataElem.add(option);
                    }
    
                    dataElem.disabled = false;
    
                } else {
    
                    dataElem.disabled = true;
                }
            }
    
        </script>
    <script>
        document.querySelector("option[value='<%= booking.Student %>']").selected = true;
        teamSelected('<%= booking.Student %>')
        document.querySelector("option[value='<%= booking.data %>']").selected = true;

    </script>

</body>

</html>